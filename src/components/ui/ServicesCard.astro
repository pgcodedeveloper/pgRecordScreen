---
interface Props {
    title: string,
    price: number,
    services: {
        text: string,
    }[],
}

const { title, price, services } = Astro.props;
---
<div
  class="w-full max-w-sm p-4 border border-gray-400 rounded-lg sm:p-8"
>
  <h5 class="mb-4 text-xl font-medium text-gray-600">
    {title}
  </h5>
  <div class="flex items-baseline text-gray-900">
    <span class="text-3xl font-semibold">$</span>
    <span class="text-5xl font-extrabold tracking-tight">{price}</span>
    <span class="ms-1 text-xl font-normal text-gray-500"
      >/month</span
    >
  </div>
  <ul role="list" class="space-y-5 my-7">
    {services.map(service => (
        <li class="flex items-center">
            <svg
                class="flex-shrink-0 w-4 h-4 text-blue-700"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"
                ></path>
            </svg>
            <span class="text-base font-normal leading-tight text-gray-500 ms-3">{service.text}</span>
        </li>
    ))}
  </ul>
</div>
